@inherits LayoutComponentBase
@inject NavigationManager Navigation
@using BlazorApp1.Services
@using BlazorApp1.Client.Models
@inject INotificationService NotificationService

@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <AuthorizeView>
            <Authorized>
                @{
                    var relativePath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLowerInvariant();
                    bool isPublicPage = relativePath == "" || relativePath == "login" || relativePath == "register";
                    bool shouldShowLogout = !isPublicPage;
                    bool isAdminPage = relativePath.Contains("adminpanel"); // শুধুমাত্র admin
                }

                @if (shouldShowLogout)
                {
                    <div class="top-row px-4 d-flex justify-content-end align-items-center">

                        <button class="btn btn-logout me-3" @onclick="Logout">
                            Logout
                        </button>
                        @if (isAdminPage)
                        {
                            <div class="notification-wrapper position-relative">
                                <button class="btn btn-notify" @onclick="ToggleNotifications">
                                    🔔
                                    @if (unreadCount > 0)
                                    {
                                        <span class="badge">@unreadCount</span>
                                    }
                                </button>
                                @if (showDropdown)
                                {
                                    <div class="notification-dropdown shadow-lg">
                                        @if (notifications?.Count > 0)
                                        {
                                            @foreach (var n in notifications)
                                            {
                                                <div class="notification-item">
                                                    <strong>@n.Message</strong>
                                                    <br />
                                                    <small>@n.CreatedAt.ToLocalTime()</small>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="notification-item">No new notifications</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            </Authorized>
            <NotAuthorized>
            </NotAuthorized>
        </AuthorizeView>

        @{
            var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLowerInvariant();
            // login বা register পেজের জন্য বিশেষ কন্টেইনার ক্লাস যুক্ত করা হচ্ছে
            var containerClass = (currentPath == "login" || currentPath == "register") ? "login-page-container" : "content-wrapper";
        }

        <div class="@containerClass">
            <article class="content px-4">
                @Body
            </article>
        </div>
        </main>
</div>

