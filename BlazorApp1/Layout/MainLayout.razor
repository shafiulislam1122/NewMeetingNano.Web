@code {
    private List<Notification> notifications = new();
    private int unreadCount = 0;
    private bool showDropdown = false;

    protected override async Task OnInitializedAsync()
    {
        var relativePath = Navigation.ToBaseRelativePath(Navigation.Uri).ToLowerInvariant();
        if (relativePath.Contains("adminpanel"))
        {
            await LoadNotifications();
        }
        Navigation.LocationChanged += OnLocationChanged;
    }

    private async Task LoadNotifications()
    {
        // Ensure non-null list and update count
        notifications = await NotificationService.GetUnreadNotificationsAsync() ?? new List<Notification>();
        unreadCount = notifications.Count;
    }

    // ⭐ ToggleNotifications মেথড আপডেট করা হলো ডেটা রি-লোড নিশ্চিত করার জন্য ⭐
    private async void ToggleNotifications()
    {
        showDropdown = !showDropdown;

        if (showDropdown)
        {
            await LoadNotifications(); // ড্রপডাউন খোলার সময় ডেটা লোড করো
        }
        
        StateHasChanged(); 
    }

    private void OnLocationChanged(object sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    void Logout() => Navigation.NavigateTo("/", true);

    public void Dispose() => Navigation.LocationChanged -= OnLocationChanged;
}