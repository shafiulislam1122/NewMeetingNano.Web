@page "/employee/meetingroomlist"
@inject ApiService ApiService

<h3>Available Meeting Rooms</h3>

@if (rooms == null)
{
    <p>Loading...</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Capacity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in rooms)
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.Name</td>
                    <td>@room.Capacity</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MeetingRoomDto> rooms;

    protected override async Task OnInitializedAsync()
    {
        rooms = await ApiService.GetMeetingRooms();
    }
}
