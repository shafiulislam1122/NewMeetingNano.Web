@page "/admin/deletemeetingroom/confirm/{Id:guid}"
@inject ApiService ApiService
@inject NavigationManager Navigation

<h3>Are you sure you want to delete this room?</h3>
<button class="btn btn-danger" @onclick="ConfirmDelete">Yes, Delete</button>
<button class="btn btn-secondary" @onclick="Cancel">Cancel</button>

@code {
    [Parameter] public Guid Id { get; set; }

    async Task ConfirmDelete()
    {
        await ApiService.DeleteMeetingRoom(Id);
        Navigation.NavigateTo("/admin/meetingroom/delete/success");
    }

    void Cancel() => Navigation.NavigateTo("/admin/meetingroom/list");
}
